{
  "project_name": "Laravel POS + LHDN E-Invoice System",
  "tailwind_config": {
    "theme": {
      "extend": {
        "colors": {
          "primary": {
            "50": "#f0f9ff",
            "100": "#e0f2fe",
            "200": "#bae6fd",
            "300": "#7dd3fc",
            "400": "#38bdf8",
            "500": "#0ea5e9",
            "600": "#0284c7",
            "700": "#0369a1",
            "800": "#075985",
            "900": "#0c4a6e"
          },
          "secondary": {
            "50": "#f8fafc",
            "100": "#f1f5f9",
            "200": "#e2e8f0",
            "300": "#cbd5e1",
            "400": "#94a3b8",
            "500": "#64748b",
            "600": "#475569",
            "700": "#334155",
            "800": "#1e293b",
            "900": "#0f172a"
          },
          "success": {
            "50": "#f0fdf4",
            "100": "#dcfce7",
            "200": "#bbf7d0",
            "300": "#86efac",
            "400": "#4ade80",
            "500": "#22c55e",
            "600": "#16a34a",
            "700": "#15803d",
            "800": "#166534",
            "900": "#14532d"
          },
          "warning": {
            "50": "#fffbeb",
            "100": "#fef3c7",
            "200": "#fde68a",
            "300": "#fcd34d",
            "400": "#fbbf24",
            "500": "#f59e0b",
            "600": "#d97706",
            "700": "#b45309",
            "800": "#92400e",
            "900": "#78350f"
          },
          "danger": {
            "50": "#fef2f2",
            "100": "#fee2e2",
            "200": "#fecaca",
            "300": "#fca5a5",
            "400": "#f87171",
            "500": "#ef4444",
            "600": "#dc2626",
            "700": "#b91c1c",
            "800": "#991b1b",
            "900": "#7f1d1d"
          },
          "lhdn": {
            "green": "#008a3c",
            "dark-green": "#005a28"
          }
        },
        "fontSize": {
          "xs": ["0.75rem", { "lineHeight": "1rem" }],
          "sm": ["0.875rem", { "lineHeight": "1.25rem" }],
          "base": ["1rem", { "lineHeight": "1.5rem" }],
          "lg": ["1.125rem", { "lineHeight": "1.75rem" }],
          "xl": ["1.25rem", { "lineHeight": "1.75rem" }],
          "2xl": ["1.5rem", { "lineHeight": "2rem" }],
          "3xl": ["1.875rem", { "lineHeight": "2.25rem" }],
          "4xl": ["2.25rem", { "lineHeight": "2.5rem" }]
        },
        "borderRadius": {
          "none": "0px",
          "sm": "0.125rem",
          "DEFAULT": "0.25rem",
          "md": "0.375rem",
          "lg": "0.5rem",
          "xl": "0.75rem",
          "2xl": "1rem",
          "full": "9999px"
        }
      }
    }
  },
  "design_structure": {
    "layout": {
      "main": {
        "container": "max-w-screen-xl mx-auto px-4 py-2",
        "breakpoints": {
          "mobile": "sm:max-w-md",
          "tablet": "md:max-w-2xl",
          "desktop": "lg:max-w-4xl"
        }
      }
    },
    "components": {
      "header": {
        "height": "h-16",
        "bg": "bg-white dark:bg-gray-800",
        "border": "border-b border-gray-200 dark:border-gray-700",
        "text_color": "text-gray-800 dark:text-white",
        "logo_size": "h-10",
        "outlet_badge": "bg-primary-100 text-primary-800 px-2 py-1 rounded-full text-xs"
      },
      "sidebar": {
        "width": "w-64",
        "bg": "bg-gray-50 dark:bg-gray-900",
        "text_color": "text-gray-700 dark:text-gray-200",
        "active_item": "bg-primary-50 dark:bg-primary-900 text-primary-700 dark:text-primary-200",
        "hover": "hover:bg-gray-100 dark:hover:bg-gray-800"
      },
      "pos_interface": {
        "cart_panel": {
          "width": "w-full md:w-2/5 lg:w-1/4",
          "bg": "bg-gray-50 dark:bg-gray-800",
          "border": "border-l border-gray-200 dark:border-gray-700"
        },
        "product_grid": {
          "columns": "grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5",
          "gap": "gap-3",
          "item": {
            "padding": "p-3",
            "bg": "bg-white dark:bg-gray-700",
            "border": "border border-gray-200 dark:border-gray-600",
            "hover": "hover:bg-primary-50 dark:hover:bg-gray-600",
            "text_color": "text-gray-800 dark:text-white",
            "font_size": "text-sm",
            "min_height": "min-h-20"
          }
        },
        "payment_form": {
          "max_width": "max-w-md",
          "bg": "bg-white dark:bg-gray-800",
          "shadow": "shadow-lg",
          "rounded": "rounded-xl",
          "padding": "p-6"
        }
      },
      "buttons": {
        "primary": "bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-lg transition",
        "secondary": "bg-gray-200 hover:bg-gray-300 text-gray-800 dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-white font-medium py-2 px-4 rounded-lg transition",
        "success": "bg-success-600 hover:bg-success-700 text-white font-medium py-2 px-4 rounded-lg transition",
        "danger": "bg-danger-600 hover:bg-danger-700 text-white font-medium py-2 px-4 rounded-lg transition",
        "outline": "border border-primary-500 text-primary-600 hover:bg-primary-50 dark:text-primary-400 dark:hover:bg-gray-800 font-medium py-2 px-4 rounded-lg transition",
        "touch_friendly": "py-4 px-6 text-lg min-w-24"
      },
      "cards": {
        "default": "bg-white dark:bg-gray-800 rounded-lg shadow p-4 border border-gray-200 dark:border-gray-700"
      },
      "forms": {
        "input": "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500",
        "select": "w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:outline-none focus:ring-2 focus:ring-primary-500",
        "label": "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"
      },
      "invoice_display": {
        "qr_code_container": "flex justify-center my-4",
        "qr_code_size": "w-40 h-40",
        "lhdn_verification_banner": "bg-lhdn-green text-white text-center py-2 rounded-t-lg",
        "invoice_details": "bg-gray-50 dark:bg-gray-800 p-4 rounded-b-lg"
      }
    },
    "typography": {
      "headings": {
        "h1": "text-2xl font-bold text-gray-900 dark:text-white",
        "h2": "text-xl font-semibold text-gray-800 dark:text-gray-100",
        "h3": "text-lg font-medium text-gray-700 dark:text-gray-200"
      },
      "body": {
        "base": "text-gray-700 dark:text-gray-300",
        "small": "text-sm text-gray-600 dark:text-gray-400"
      }
    },
    "dark_mode": {
      "enabled": true,
      "toggle_button": "absolute top-4 right-4 z-10",
      "class": "dark"
    },
    "language_toggle": {
      "position": "top-right near user menu",
      "options": ["BM", "EN"],
      "style": "text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-primary-600"
    }
  },
  "responsive_behavior": {
    "mobile_first": true,
    "pos_on_mobile": {
      "product_grid_full_width": true,
      "cart_collapsible": true,
      "large_touch_targets": true
    }
  },
  "branding": {
    "primary_color_hex": "#0ea5e9",
    "secondary_color_hex": "#334155",
    "lhdn_compliance_color": "#008a3c",
    "logo_placement": "top-left in header",
    "receipt_branding": "Includes outlet name, address, and tax ID"
  }
}